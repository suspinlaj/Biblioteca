<Shell
    x:Class="Biblioteca_SusanaPineros.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Biblioteca_SusanaPineros"
    Title="Biblioteca_SusanaPineros"

    Shell.TabBarForegroundColor="#5a3f2b"     
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#543728"
    Shell.BackgroundColor="#704b2f"
    Shell.TabBarBackgroundColor="#a2815e"
    Shell.ForegroundColor="#704b2f"
    Shell.TitleColor="White">

    <TabBar>
        <ShellContent Title="Principal"  ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Alta" ContentTemplate="{DataTemplate local:PantallaAlta}" />
        <ShellContent Title="Consulta"  ContentTemplate="{DataTemplate local:PantallaConsulta}" />
    </TabBar>

</Shell>
